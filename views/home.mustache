<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>PetroNaka</title>
    <link rel="stylesheet" type="text/css" media="screen" href="../stylesheets/home.css" />
</head>

<body>
    <header class="CabecalhoHome">
        <div class="Logo">
            <img class="logo" src="../images/PetroNaka1.png" alt="...">
        </div>
        <nav>
            <ul>
                <li id="perfil"><a href="/clientes/editarCliente">Perfil</a></li>
                <li><a href="/pedidos">Pedidos</a></li>
                <li><a href="/produtos">Produtos</a></li>
                <li><a href="/logout">Sair</a></li>
            </ul>
        </nav>
    </header>
    <div class="linha-amarela"></div>
    <main class="MainHome">
        <div class="LogoFooter">
            <img class="logoFooter" src="../images/fundoPetroNaka.png" alt="...">
        </div>
    </main>

    <footer>
        <div></div>
    </footer>

    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const perfilLi = document.getElementById("perfil");
            perfilLi.addEventListener("click", (event) => {
                event.preventDefault();
                window.location.href = "/clientes/editarCliente";
            });
        });
    </script>
</body>

</html>